<% if(success && success.length) { %>
    <div id="alert-box"
        class="fixed top-24 right-2 max-w-lg w-full p-4 bg-green-600 text-white rounded-lg shadow-lg z-40 flex items-center space-x-4">
        <div class="flex-1">
            <p id="alert-message">
                <%= success %>
            </p>
        </div>
        <button id="close-btn" class="text-white hover:text-gray-200 focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" stroke="currentColor"
                viewBox="0 0 24 24" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </div>
    
    <% } %>

        <!-- error  -->
        <% if(error && error.length) { %>
            <div id="alert-box" 
                class="fixed top-24 right-2 max-w-lg w-full p-4 bg-red-600 text-white rounded-lg z-40 shadow-lg flex items-center space-x-4">
                <div class="flex-1">
                    <p id="alert-message">
                        <%= error %>
                    </p>
                </div>
                <button id="close-btn" class="text-white hover:text-gray-200 focus:outline-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
            <% } %>